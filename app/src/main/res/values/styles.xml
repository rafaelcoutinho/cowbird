<resources>
    <style name="CustomActionBarTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:colorPrimaryDark">@color/actionbar_background</item>
    </style>
    <!-- Base application theme. -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
    </style>

    <style name="mainField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
