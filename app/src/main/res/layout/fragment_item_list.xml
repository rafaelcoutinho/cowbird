<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4eed7"
    tools:context="com.dc.cowbird.ListProtocolsFragment">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#aecefd"
        android:dividerHeight="2dp" />

    <TextView
        android:id="@+id/lblEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDate"
        android:layout_gravity="left|top"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        android:text="Nenhum SMS com protocolos conhecidos encontrado."
        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:backgroundTint="@color/actionbar_background"
        android:src="@drawable/plus_icon"
        android:baselineAlignBottom="false"
        app:elevation="10dp"
        app:borderWidth="0dp"
        android:layout_gravity="right|bottom"
        android:id="@+id/btnNew" />

</FrameLayout>
